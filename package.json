{
    "private": true,
    "workspaces": [
        "eCommerce",
        "Library"
    ],
    "engines": {
        "node": ">=23.0.0"
    },
    "scripts": {
        "g:clean": "cd $INIT_CWD && tsc -b --clean",
        "g:build": "cd $INIT_CWD && vite build",
        "g:lint": "cd $INIT_CWD && eslint --cache --quiet --fix",
        "g:lint:ci": "cd $INIT_CWD && eslint --cache --quiet",
        "g:test": "cd $INIT_CWD && vitest run",
        "g:test:watch": "cd $INIT_CWD && vitest --watch",
        "g:test:debug": "DEBUG=vite:proxy && cd $INIT_CWD && vitest --watch",
        "g:ci": "cd $INIT_CWD && yarn clean && yarn lint:ci && yarn build && yarn test",
        "g:update": "cd $INIT_CWD && ncu -u && yarn",
        "g:preview": "cd $INIT_CWD && vite preview",
        "g:dev": "cd $INIT_CWD && vite --force",
        "g:dev:debug": "DEBUG=vite:proxy && cd $INIT_CWD && vite --force",
        "clean": "node ./run-task-on-workspaces.js clean",
        "build": "node ./run-task-on-workspaces.js build",
        "lint": "node ./run-task-on-workspaces.js lint",
        "test": "node ./run-task-on-workspaces.js test",
        "ci": "node ./run-task-on-workspaces.js ci",
        "publish-version": "node ./run-task-on-workspaces.js publish-version $*",
        "update": "node ./run-task-on-workspaces.js update"
    },
    "devDependencies": {
        "@eslint/eslintrc": "3.3.3",
        "@eslint/js": "10.0.1",
        "@tailwindcss/postcss": "4.1.18",
        "@tailwindcss/vite": "4.1.18",
        "@types/chai": "5.2.3",
        "@types/chai-as-promised": "8.0.2",
        "@types/mocha": "10.0.10",
        "@types/node": "25.3.2",
        "@types/react": "19.2.14",
        "@types/react-dom": "19.2.3",
        "@types/sinon": "21.0.0",
        "@types/sinon-chai": "4.0.0",
        "@typescript-eslint/eslint-plugin": "8.55.0",
        "@typescript-eslint/parser": "8.55.0",
        "@vitejs/plugin-react": "5.1.4",
        "@vitest/coverage-v8": "4.0.18",
        "autoprefixer": "10.4.27",
        "chai": "6.2.2",
        "chai-as-promised": "8.0.2",
        "edit-json-file": "1.8.1",
        "eslint": "10.0.2",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-header": "3.1.1",
        "eslint-plugin-import": "2.32.0",
        "eslint-plugin-no-null": "1.0.2",
        "eslint-plugin-prettier": "5.5.5",
        "eslint-plugin-react": "7.37.5",
        "glob": "13.0.6",
        "globals": "17.3.0",
        "mocha": "11.7.5",
        "module-alias": "2.3.4",
        "npm-check-updates": "19.6.2",
        "prettier": "3.8.1",
        "rollup": "4.59.0",
        "rollup-plugin-commonjs": "10.1.0",
        "rollup-plugin-peer-deps-external": "2.2.4",
        "rollup-plugin-typescript2": "0.36.0",
        "sinon": "21.0.1",
        "sinon-chai": "4.0.1",
        "tailwindcss": "4.1.18",
        "ts-node": "10.9.2",
        "typescript": "5.9.3",
        "typescript-eslint": "8.55.0",
        "vite": "7.3.1",
        "vite-plugin-commonjs": "0.10.4",
        "vite-tsconfig-paths": "6.1.1",
        "vitest": "4.0.18"
    },
    "license": "MIT",
    "version": "0.0.0",
    "packageManager": "yarn@4.5.3"
}
